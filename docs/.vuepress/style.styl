.front {
    background-image: url("/imgs/sky.jpg");
    background-size: cover;
    padding-top: 2.2%;
    max-height: 666px;
}

.home .hero {
    color: #7B463D !important;
}
.home .description {
    color: #7B463D !important;
}

::-webkit-scrollbar {
    width: 4px;
    height: 1px;
    background-color: #F5F5F5;
}
 
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 16px rgba(0,0,0,.3);
    background-color: #8AC3421;
}

@media (max-width: 420px) {
    .front {
        max-height: 560px;
    }
}
@media (min-width: 420px) and (max-width: 607px) {
    .front {
        max-height: 730px;
    }
}  
@media (min-width: 608px) and (max-width: 768px) {
    .front {
        max-height: 700px;
    }
}    
